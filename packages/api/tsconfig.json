{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ESNext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
